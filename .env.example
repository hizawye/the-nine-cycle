# Environment Variables Template for Nine Cycle Project
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nine_cycle_db
POSTGRES_USER=nine_cycle_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=nine_cycle_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# API Keys for Data Collection
WORLD_BANK_API_KEY=your_world_bank_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
NEWS_API_KEY=your_news_api_key_here
FRED_API_KEY=your_fred_api_key_here

# Application Settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# Data Collection Settings
MAX_REQUESTS_PER_MINUTE=60
DATA_COLLECTION_BATCH_SIZE=100
RETRY_ATTEMPTS=3
TIMEOUT_SECONDS=30

# Dashboard Settings
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_DEBUG=True

# API Settings
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# File Paths
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_CYCLES_PATH=data/cycles
DATA_EXPORTS_PATH=data/exports
LOGS_PATH=logs
MODELS_PATH=models

# External Services
WIKIPEDIA_RATE_LIMIT=1.0
WORLDBANK_RATE_LIMIT=0.5
NEWS_API_RATE_LIMIT=10.0

# ML Model Settings
MODEL_VERSION=1.0.0
PREDICTION_CONFIDENCE_THRESHOLD=0.7
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.2

# Monitoring & Alerts
ENABLE_MONITORING=True
ALERT_EMAIL=your_email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
